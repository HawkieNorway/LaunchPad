@{
    ViewData["Title"] = "Home";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/LaunchPad-Banner-01.png" alt="{ Launch-Pad }" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Script | Schedule | Publish
                    <a class="btn btn-default" href="http://github.com/michaelburns/LaunchPad">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/LaunchPad-Banner-02.png" alt="Script" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Write and share powerful scripts within your team.
                    <a class="btn btn-default" href="http://github.com/michaelburns/LaunchPad">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/LaunchPad-Banner-03.png" alt="Schedule" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Take control over when and how often your scripts run.
                    <a class="btn btn-default" href="http://github.com/michaelburns/LaunchPad">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/LaunchPad-Banner-04.png" alt="Publish" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Give users the power of automation(Coming Soon).
                    <a class="btn btn-default" href="http://github.com/michaelburns/LaunchPad">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

